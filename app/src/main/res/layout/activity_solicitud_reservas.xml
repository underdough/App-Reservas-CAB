<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:text="@string/txtSolicitudReservas"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNombreAmbiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/nombreAmbiente"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvNomUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/txt_color"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/tvSolicitado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="@string/SolicitadoPor"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tvInfoTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/txt_color"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="@string/fecha"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <ImageButton
        android:id="@+id/btnCalendario"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="5pt"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_calendario"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvJornada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/jornada"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="5pt">

        <CheckBox
            android:id="@+id/checkMañana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Mañana"
            android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:buttonTint="@color/btn_sena" />

        <CheckBox
            android:id="@+id/checkTarde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tarde"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:buttonTint="@color/btn_sena" />
        <CheckBox
            android:id="@+id/checkNoche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Noche"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:buttonTint="@color/btn_sena" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btnCancelar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="210dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/colorBtnCancela"
        android:textAlignment="center"
        android:src="@drawable/ic_cancelar"
        android:textColor="@color/white" />

    <ImageButton
        android:id="@+id/btnGuardar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="300dp"
        android:layout_marginTop="-70dp"
        android:backgroundTint="@color/colorBtns"
        android:textAlignment="center"
        android:src="@drawable/ic_guardar"
        android:textColor="@color/white" />

</LinearLayout>